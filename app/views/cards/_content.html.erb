<div class="card text-center" >
  <div class="card-body">
    <%= image_tag(card.image.url) unless card.image.file.nil? %>
    <h5 class="card-title"><h3><%= card.original_text %></h3></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= card.transcription %></h6>
    <p class="card-text"><%= card.translated_text %></p>
    <h6 class="card-subtitle mb-2 text-muted"><%= card.review_date.strftime("%d/%m/%Y") %></h6>
  </div>
</div>

<h1>Edit Card</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @card, defaults: { required: false } do |f| %>
      <%= f.input :original_text %>
      <%= f.input :translated_text %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

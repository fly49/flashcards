<div class="container center_div" style= "width: 400px">
  <%= simple_form_for @card, html: { multipart: true } do |f| %>
    <%= f.input :original_text, input_html: { maxlength: 20 } %>
    <%= f.input :translated_text, input_html: { maxlength: 50 } %>
    <%= f.input :transcription, input_html: { maxlength: 50 }, required: false %>
    <%= f.association :decks, collection: current_user.decks, include_blank: true, as: :check_boxes %>
    <%= f.label :image, required: false %>
    <%= f.file_field :image, required: false %>
    <%= f.input :remove_image, as: :boolean if @card.image.file %>
    <%= f.button :submit, class: 'btn btn-primary btn-space' %>
  <% end %>
</div>

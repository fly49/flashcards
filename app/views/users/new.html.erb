<h1><%= I18n.t('users_controller.new.title') %></h1>
<div class="container center_div" style= "width: 400px">
  <%= simple_form_for @user, :url => { :action => "create" }, defaults: { required: false } do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>

<h1><%= I18n.t('users_controller.update.title') %></h1>
<div class="container center_div" style= "width: 400px">
  <%= simple_form_for current_user, defaults: { required: false } do |f| %>
    <%= f.input :email %>
    <%= f.simple_fields_for :settings do |ff| %>
      <%= ff.input :locale, collection: I18n.available_locales %>
    <% end %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @deck do |f| %>
      <%= f.input :name, input_html: { maxlength: 20 }, required: false %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
